<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>Itube</title>
</head>
<body>

    <div class="navbar">
        <a class="btn btn-primary" style="margin-left: 10%;">Home</a>
        <a class="btn btn-primary">Login</a>
        <a class="btn btn-primary" href="/upload">Upload</a>
        <a class="btn btn-primary" style="margin-right: 10%;">Logout</a>

    </div>

    <div class="videos justify-content-center d-flex mt-5">
        <% if (videos.length > 0) { %>
            <% videos.forEach((video) => { %>
                <div class="video">
                    <a href="/watch?v=<%= video.id %>"><img src="/images/<%= video.img %>" alt="image"></a>
                    <h3 class="title"><%= video.title %></h3>

                </div>
    
            <% }) %>
    
        <% } %>    

    </div>

</body>
</html>